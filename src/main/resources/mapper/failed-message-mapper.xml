<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiangkai.community.dao.mapper.FailedMessagesMapper">
    <sql id="selectFields">
        id, topic, `partition`, `key`, `value`, failure_reason, create_time
    </sql>

    <sql id="insertFields">
        topic, `partition`, `key`, `value`, failure_reason, create_time
    </sql>

    <select id="selectFailedMessageById" resultType="FailedMessage">
        select <include refid="selectFields"></include>
        from failed_messages
        where id = #{id}
    </select>

    <insert id="insertFailedMessage" parameterType="FailedMessage" keyProperty="id">
        insert into failed_messages (<include refid="insertFields"></include>)
        values (#{topic}, #{partition}, #{key}, #{value}, #{failureReason}, #{createTime})
    </insert>
</mapper>