<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiangkai.community.mapper.LoginTicketMapper">

    <sql id="selectFields">
        id, user_id, ticket, status, first_login_time, expired
    </sql>

    <sql id="insertFields">
        user_id, ticket, status, first_login_time, expired
    </sql>

    <select id="selectByTicket" resultType="LoginTicket">
        select <include refid="selectFields"></include>
        from login_ticket
        where ticket = #{ticket}
    </select>

    <update id="updateStatus">
        update login_ticket set status = #{status} where user_id = #{userId}
    </update>

    <insert id="insertTicket" parameterType="LoginTicket">
        insert into login_ticket (<include refid="insertFields"></include>)
        values (#{userId}, #{ticket}, #{status}, #{firstLoginTime}, #{expired})
    </insert>

</mapper>